# -------------------------------------------------------------------
# VARIABLES
# -------------------------------------------------------------------

NAME			:= test_next_line.a
CC 				:= cc
BUFFER_SIZE		:= -D BUFFER_SIZE=10
CFLAGS 			:= -Wall -Werror -Wextra -g
DEBUG			:= -g
RM 				:= rm -rf

# Still have to put object files into objs folder, its WIP
# OBJS_DIR		:= obj
#
# Headers are to be placed into this folder.
INCLUDES_DIR	:= ../.

# Put all directory paths with the file you want to compile here.
# They will be automatically detected with foreach.
SRC_DIRS		:= ../.\
				   .

SRCS_C			:= $(foreach DIR,$(SRC_DIRS),$(wildcard $(DIR)/*.c))

OBJS 			:= $(SRCS_C:.c=.o)

# -------------------------------------------------------------------
# RULES
# -------------------------------------------------------------------

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(BUFFER_SIZE) -o $(NAME) $(OBJS)

%.o: %.c
	$(CC) $(CFLAGS) $(BUFFER_SIZE) -c $< -I $(INCLUDES_DIR) -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

nightcore:
